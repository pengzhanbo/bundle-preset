{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "lib": ["ESNext"],
    "sourceMap": false,
    "noEmitOnError": true,
    "paths": {
      "@bundle-preset/vite-*": ["packages/vite/*/src/index.ts"],
      "@bundle-preset/shared": ["packages/shared/src/index.ts"]
    }
  },
  "include": ["./packages/**/src", "./playground/**/vite.config.ts"]
}
